@model SAM.Taskboard.Model.Project.ProjectViewModel

<div id="boards">
    @{
        if (Model.Boards.Count == 0)
        {
            <div class="row">
                <h5 class="mt-4">
                    There is no boards yet.
                </h5>
            </div>
        }
        else
        {
            <div class="d-flex flex-wrap justify-content-around">
                @foreach (var board in Model.Boards)
                {
                    <div class="card mt-2 mb-2 ml-2 mr-2 hover-effect" style="width: 200px">
                        <div class="card-body">
                            @board.Title
                        </div>
                        @Html.ActionLink("View", "ViewBoard", "Board", new { boardId = board.Id }, new { @class = "border-0 btn btn-outline-primary ml-2 mr-2 mb-2" })
                    </div>
                }
            </div>
        }
    }
</div>

