@model SAM.Taskboard.Model.Project.ProjectViewModel

<div class="container w-100">
    <div class="d-flex flex-column align-items-center justify-content-center w-100">
        <div class="row mt-4">
            @Model.ProjectTitle
        </div>
        @{
            if (Model.Boards.Count == 0)
            {
                <div class="row">
                    <h5 class="mt-4">
                        There is no boards yet.
                    </h5>
                </div>
            }
            else
            {
                <div class="d-flex flex-wrap justify-content-around">
                    @foreach (var board in Model.Boards)
                    {
                        <div class="card mt-4 mb-4 hover-effect" style="width: 200px; height: 50px">
                            <div class="card-body">
                                @board.Title
                            </div>
                            @Html.ActionLink("View", "View", "Board", new { boardId = board.Id }, new { @class = "border-0 btn btn-outline-primary ml-2 mr-2 mb-2" })
                        </div>
                    }
                </div>
            }
        }

        @Html.ActionLink("Create new board", "Create", "Board", null, new { @class = "border-0 btn btn-outline-primary mt-4 mb-4" })


        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </div>
</div>