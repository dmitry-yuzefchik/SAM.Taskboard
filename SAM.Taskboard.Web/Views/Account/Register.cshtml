@{
    Layout = "EmptyLayout.cshtml";
}

@model SAM.Taskboard.Model.RegisterViewModel

<div class="blur">
    <div class="d-flex justify-content-center h-100">
        <div class="d-flex flex-row justify-content-center align-self-center rounded w-auto bg-light" style="opacity: 0.9">
            <div class="container m-4">

                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="row justify-content-center">
                        <label class="mb-3">Welcome</label>
                    </div>

                    <div class="row justify-content-center">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Name" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { type = "email", @class = "form-control", placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="form-group input-length">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small break-word" })
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="form-group input-length">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm password" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small break-word" })
                        </div>
                    </div>

                    <div class="row justify-content-center text-danger small">
                        @Html.ValidationMessage("Error")
                    </div>

                    <div class="row justify-content-center">
                        <button type="submit" class="btn btn-outline-primary">Sign-up</button>
                    </div>
                }

            </div>

            <div class="d-flex rounded-right p-4 flex-column justify-content-center align-items-center bg-primary text-light">

                <div class="row justify-content-center pb-5">
                    @Html.ActionLink("Sign-in", "Login", null, new { @class = "border-0 btn btn-outline-light" })
                </div>

                <div class="row justify-content-center">
                    @Html.ActionLink("Forgot password?", "ResetPassword", null, new { @class = "border-0 btn btn-outline-light" })
                </div>
                
            </div>
        </div>
    </div>
</div>
