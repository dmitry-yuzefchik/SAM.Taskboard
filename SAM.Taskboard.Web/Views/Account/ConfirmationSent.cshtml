@{
    Layout = "~/Views/Shared/EmptyLayout.cshtml";
}

@model SAM.Taskboard.Model.ResendConfirmationEmailViewModel

<div class="blur">
    <div class="d-flex justify-content-center h-100">
        <div class="d-flex flex-column justify-content-center align-self-center rounded w-auto bg-light" style="opacity: 0.9">

            <div class="row justify-content-center m-3">
                Email was sent to @Model.Email, it may come in 5 minutes.
            </div>

            <div class="row justify-content-center mb-3">
                @Html.ActionLink("Resend email", "ResendConfirmation", null, new { @class = "ml-2 mr-2 btn btn-outline-primary" })
                @Html.ActionLink("Sign-in", "Login", null, new { @class = "ml-2 mr-2 btn btn-outline-primary" })
            </div>

        </div>
    </div>
</div>
